        public void CheckForPairs()
        {
            while (spin)
            {
                // if a new connection is made
                StringSocket newSocket = null;
                {
                    if (singleSocket != null)
                    {
                        socketPairs.Add(Tuple.Create(newSocket, singleSocket));
                        singleSocket = null;
                    }
                    else
                    {
                        singleSocket = newSocket;
                    }
                }
            }
        }
	}
}
